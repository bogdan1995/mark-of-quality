extends ../_layouts/layout.jade

block title
    title Article Title

block content
    .container
        .row
            .header
                .header-contacts
                    .header__address
                        .header__address-place Санкт-Петербург
                    .clock
                        .clock-time Режим работы: с 10.00 до 20.00
                .logo
                    a(href="#").logo-link
                        img(src="/img/logo.png")
                        h1.text-hidden
                .header-nav
                    .header-phone
                        a(href="tel:+78123166433").header-number +7 (812) <span>316 64 33</span>
                    .nav
                        ul.nav__list
                            each item in ['Главная','Услуги и цены', 'О нас', 'Контакты']
                                li.nav__list-item
                                    a(href="#").nav__list-link.hvr-sweep-to-bottom=item
            .company
                h1.company-name Центр правовой помощи
    .container
        .slider
            ul.slider__list
                li.slider__list-item
                    img(src="/img/slider/slide1.png").slider__list-img
                    img(src="/img/slider/woman-slide1.png").slider__list-img.slider__list-img_anim
                li.slider__list-item
                    img(src="/img/slider/slide2.png").slider__list-img
                    img(src="/img/slider/man-slide2.png").slider__list-img.slider__list-img_anim
                li.slider__list-item
                    img(src="/img/slider/slide3.png").slider__list-img
                    img(src="/img/slider/woman-slide3.png").slider__list-img.slider__list-img_anim
    .container
        .row
            ul.advantages__list
                li.advantages__list-item
                    a(href="#").advantages__list-link.advantages__list-link_practice 15 лет юридической практики
                li.advantages__list-item
                    a(href="#").advantages__list-link.advantages__list-link_deal До 95% выигранных дел
                li.advantages__list-item
                    a(href="#").advantages__list-link.advantages__list-link_cost Стоимость консультации от 500 рублей
                li.advantages__list-item
                    a(href="#").advantages__list-link.advantages__list-link_result Работа только на результат
    .container
        .row
            h1.services-name Юридические услуги
    .container
        .row
            .services-names
                .services-individuals
                .services-entities
            .services__left
                ul.services__left__list
                    li.services__left__list-item
                        a(href="#").services__left__list-item Решение споров
                    li.services__left__list-item
